{# Opnemen van de "Main" file #}
{% extends "main.html.twig" %}

{% block header %}
    <div class="background" style="background-image: url(https://images.unsplash.com/photo-1604382354936-07c5d9983bd3?ixlib=rb-4.0.3&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=crop&w=1170&q=80);">

    </div>
{% endblock %}

{% block content %}
    
    <div class="row">
        {% for record in data|slice(0, 4) %}
            <div class="col-12 col-xl-12 col-xxl-6">
                <div class="px-lg-3 pb-lg-5">
                    {# Start Meal #}
                    <div class="meal">

                        <div class="image" style="background-image: url({{record.picture}})">
                            
                        </div>

                        <div class="info">
                            <h2> {{record.title}} </h2>

                            <div class="rating">
                                {% for i in range(1, 5) %}
                                    {% if record.rating_average|round >= i %}
                                        <i class="star fas fa-star fa-2x" data-value="{{i}}"></i>
                                    {% else %}
                                        <i class="star far fa-star fa-2x" data-value="{{i}}"></i>
                                    {% endif %}
                                {% endfor %}
                            </div>

                            <p> 
                                {{record.description_long}}
                            </p>

                            <div class="extra">
                                <h3> <a href="./index.php?action=detail&recipe_id={{record.id}}"> Smullen! </a> </h3>
                                <div class="calories"> <i class="fas fa-fire fa-lg"></i> {{(record.calories_total / 1000)|round()}} </div>
                                <div class="price"> <i class="fas fa-euro-sign fa-lg"></i> {{(record.price_total / 100)|number_format(2, '.', ',')}} </div>
                                <div class="people"> <i class="fas fa-user-friends fa-lg"></i> 4 </div>
                            </div>
                            
                        </div>
                    {# End Meal #}
                    </div>
                </div>
            </div>
        {% endfor %}
    </div>

{% endblock %}
